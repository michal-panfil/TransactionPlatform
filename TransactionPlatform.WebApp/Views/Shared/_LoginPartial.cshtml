@using Microsoft.AspNetCore.Identity
@using TransactionPlatform.WebApp.Models
@inject SignInManager<ApplicationUser> singInManager
@inject UserManager<ApplicationUser> userManger

@if (singInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class=" nav nabar navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Mange">
                    Hello @userManger.GetUserName(User) !
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-secondary ml-3" >Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="btn btn-primary m-2" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a class="btn btn-primary m-2" asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}
